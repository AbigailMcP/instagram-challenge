<% if @posts.any? %>
  <% @posts.reverse.each do |post| %>
    <div> <%= link_to post.caption, post_path(post) %> </div>
    <div> <%= image_tag post.image.url(:thumb) %> </div>
    <div> <%= link_to 'Edit', edit_post_path(post) %> </div>
    <div> <%= link_to 'Delete', post_path(post), method: :delete %> </div>
  <% end %>
<% else %>
  <p> No posts yet </p>
<% end %>

<%= link_to 'Add a post', new_post_path %>
